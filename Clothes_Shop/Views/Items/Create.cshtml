@model Clothes_Shop.Models.Item




@{
    ViewData["Title"] = "Create";


}


<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label name="Category">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category"></select>
            </div>

            <div class="form-group">
                <label name="Gender">Gender</label>
                <select asp-for="GenderId" class="form-control" asp-items="ViewBag.Gender"></select>
            </div>


            <div class="form-group">
                <label asp-for="Features.Size" class="control-label"></label>
                <select asp-for="Features.Size" id="Features.Size" name="Features.Size" class="form-control">
                    <option value="XS">XS</option>
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                    <option value="XXL">XXL</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Features.Color" class="control-label"></label>
                <select asp-for="Features.Color" id="Features.Color" name="Features.Color" class="form-control">
                    <option style="background-color:white" value="White">White</option>
                    <option style="background-color:green" value="Green">Green</option>
                    <option style="background-color:black" value="Black">Black</option>
                    <option style="background-color:yellow" value="Yellow">Yellow</option>
                    <option style="background-color:blue" value="Blue">Blue</option>
                    <option style="background-color:red" value="Red">Red</option>
                </select>
            </div>


            <div class="form-group">
                <label asp-for="Features.Description" class="control-label"></label>
                <input asp-for="Features.Description" class="form-control" />
                <span asp-validation-for="Features.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Features.Material" class="control-label"></label>
                <input asp-for="Features.Material" class="form-control" />
                <span asp-validation-for="Features.Material" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Features.Country" class="control-label"></label>
                <input asp-for="Features.Country" class="form-control" />
                <span asp-validation-for="Features.Country" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

